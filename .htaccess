php_flag log_errors on
php_value error_log /usr/home/appyfy/apache-error.log

# ========== GZIP COMPRESSION ==========
<IfModule mod_deflate.c>
    # Comprimir HTML, CSS, JavaScript, texto, XML, fuentes y SVG
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE application/vnd.ms-fontobject

    # Excluir navegadores antiguos
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html

    # No comprimir imágenes ya comprimidas
    SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|webp)$ no-gzip dont-vary
</IfModule>

# ========== CACHE-CONTROL HEADERS ==========
<IfModule mod_expires.c>
    ExpiresActive On

    # Cache por defecto: 1 hora
    ExpiresDefault "access plus 1 hour"

    # HTML - sin cache
    ExpiresByType text/html "access plus 0 seconds"

    # CSS y JS - 1 mes
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"

    # Imágenes - 1 año
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # Fuentes - 1 año
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
</IfModule>

# ========== ADDITIONAL CACHE HEADERS ==========
<IfModule mod_headers.c>
    # Caché para archivos estáticos
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|webp|ico|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # Sin caché para HTML y PHP
    <FilesMatch "\.(html|php)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires 0
    </FilesMatch>
</IfModule>

# Activa el motor de reescritura de Apache
RewriteEngine On

# Redirigir solicitudes que no provengan de una IP específica
# RewriteCond %{REMOTE_ADDR} !^88\.30\.52\.150$
# RewriteRule ^(.*)$ https://www.facilitame.es [R=302,L]

# Deshabilitar el listado de directorios
Options -Indexes

# Definir la base de la solicitud
RewriteBase /

# Bloquear el acceso directo a directorios existentes, excepto la raíz del sitio
RewriteCond %{REQUEST_URI} !^/$
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^.* - [F,L]

# Redirige todas las solicitudes que terminan en .php a www.google.es
#RewriteCond %{THE_REQUEST} \.php [NC]
#RewriteRule ^(.*)$ https://www.google.es [R=301,L]

# Excluir solicitudes para recursos estáticos de la redirección
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|pdf)$ [NC]
RewriteCond %{REQUEST_URI} !^/bold/bold.php$ [NC]

# Captura la parte de la URL que sigue a la base y pásala como parámetro de consulta 'page'
RewriteCond %{REQUEST_URI} ^/(.*)$
RewriteRule ^(.*)$ bold/bold.php?page=%1 [QSA,L]

# Redirigir la raíz del sitio a bold/bold.php
RewriteRule ^$ bold/bold.php?page=/ [QSA,L]
